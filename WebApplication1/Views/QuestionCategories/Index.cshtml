@model WebApplication1.Models.QuestionCategoryViewModel
@{
    ViewBag.Title = "Questions categories manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Question categories</h2>
<p>
    @Html.ActionLink("Create New", "New")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Parent category
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Categories)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentName)
            </td>
            <td>
                @Html.ActionLink("Show questions", "Index", "Questions", new { categoryId = item.Id }, new { }) | @Html.ActionLink("Edit", "Edit", new { id = item.Id }) | @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>