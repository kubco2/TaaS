@model WebApplication1.Models.GroupViewModel
@{
    ViewBag.Title = "Groups manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Student groups</h2>
<p>
    @Html.ActionLink("Create New", "New")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Authorization code
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Groups)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthCode)
            </td>
            <td>
                @*@Html.ActionLink("Show students", "Index", "Questions", new { categoryId = item.Id }, new { }) | *@@Html.ActionLink("Edit", "Edit", new { id = item.Id }) | @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>